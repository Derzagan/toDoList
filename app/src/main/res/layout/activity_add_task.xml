<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_task"
    android:background="#121212"
    android:padding="24dp">



    <TextView
        android:id="@+id/textAddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новая задача"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/inputTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Введите название задачи"
        android:backgroundTint="#03DAC5"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/textAddTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/btnPickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать дату"
        android:layout_marginTop="24dp"
        android:backgroundTint="#03DAC5"
        android:textColor="#121212"
        app:layout_constraintTop_toBottomOf="@id/inputTaskTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата не выбрана"
        android:textColor="#B0BEC5"
        app:layout_constraintTop_toBottomOf="@id/btnPickDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSaveTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:layout_marginTop="40dp"
        android:backgroundTint="#03DAC5"
        android:textColor="#121212"
        app:layout_constraintTop_toBottomOf="@id/textSelectedDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



















</androidx.constraintlayout.widget.ConstraintLayout>